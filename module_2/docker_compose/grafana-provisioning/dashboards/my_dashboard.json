{
  "panels": [
    {
      "type": "graph",
      "title": "Приклад графіка",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "your_metric{job=\"node\"}",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Загальний стан системи",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(overall_system_health)"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "type": "table",
      "title": "Топ проблемних вузлів",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(5, node_load5)"
        }
      ],
      "options": {
        "showHeader": true
      }
    }
  ],
  "title": "Удосконалений дашборд",
  "editable": true,
  "hideControls": false,
  "sharedCrosshair": true,
  "style": "dark",
  "links": []
}

