global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'node_exporter'
    static_configs:
      - targets: {% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:{{ node_exporter_port }}'{% if not loop.last %},{% endif %}
        {% endfor %}

