global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
          - '{{ host }}:9100'
        {% endfor %}

  - job_name: 'cadvisor'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
          - '{{ host }}:8080'
        {% endfor %}
